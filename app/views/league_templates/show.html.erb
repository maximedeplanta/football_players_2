<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      League #<%= @league.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/leagues" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/leagues/<%= @league.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit league
        </a>
      </div>

      <div class="col">
        <a href="/delete_league/<%= @league.id %>" class="btn btn-block btn-outline-secondary">
          Delete league
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @league.name %>
      </dd>

      <dt>
        Level
      </dt>
      <dd>
        <%= @league.level %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@league.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@league.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "league_templates/league_clubs" %>
  </div>
</div>
