<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Clubs

    <a data-toggle="collapse" href="#league_clubs_new_form">
      Add club
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @league.clubs.each do |club| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/clubs/<%= club.id %>">
          <%= club.league_id %>
        </a>

        <a href="/delete_club_from_league/<%= club.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="league_clubs_new_form">
        <%= render partial: "league_templates/league_clubs_new_form" %>
      </div>
    </div>

  </ul>
</div>
