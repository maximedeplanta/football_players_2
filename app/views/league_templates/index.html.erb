<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All leagues
    </h1>

    <a href="/leagues/new" class="btn btn-block btn-outline-secondary">
      Add a new league
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Level
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @leagues.each do |league| %>
      <tr>
        <!-- Display league.id start -->
        <td>
          <%= league.id %>
        </td>
        <!-- Display league.id end -->

        <!-- Display league.name start -->
        <td>
          <%= league.name %>
        </td>
        <!-- Display league.name end -->

        <!-- Display league.level start -->
        <td>
          <%= league.level %>
        </td>
        <!-- Display league.level end -->

        <!-- Display league.created_at start -->
        <td>
          <%= time_ago_in_words(league.created_at) %> ago
        </td>
        <!-- Display league.created_at end -->

        <!-- Display league.updated_at start -->
        <td>
          <%= time_ago_in_words(league.updated_at) %> ago
        </td>
        <!-- Display league.updated_at end -->

        <td>
          <a href="/leagues/<%= league.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
