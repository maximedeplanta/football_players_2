<h1>
  Add a new club
</h1>


<hr>

<!-- Form club start -->
<form action="/create_club" method="post">
<!-- Form club end -->

  <!-- Label and input for league_id start -->
  <div class="form-group">
    <label for="league_id">
      League
    </label>

    <!-- Input for league_id start -->
    <%= select_tag(:league_id, options_from_collection_for_select(League.all, :id, :name, @club.league_id), :class => "form-control") %>
    <!-- Input for league_id end -->
  </div>
  <!-- Label and input for league_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for level start -->
  <div class="form-group">
    <label for="level">
      Level
    </label>

    <!-- Input for level start -->
    <input type="text" id="level" name="level" class="form-control">
    <!-- Input for level end -->
  </div>
  <!-- Label and input for level end -->

  <button class="btn btn-block btn-outline-secondary">
    Create club
  </button>
</form>

<hr>

<a href="/clubs">
  Go back
</a>
