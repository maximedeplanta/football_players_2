<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All clubs
    </h1>

    <a href="/clubs/new" class="btn btn-block btn-outline-secondary">
      Add a new club
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          League
        </th>

        <th>
          Name
        </th>

        <th>
          Level
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @clubs.each do |club| %>
      <tr>
        <!-- Display club.id start -->
        <td>
          <%= club.id %>
        </td>
        <!-- Display club.id end -->

        <!-- Display club.league_id start -->
        <td>
          <%= club.league_id %>
        </td>
        <!-- Display club.league_id end -->

        <!-- Display club.name start -->
        <td>
          <%= club.name %>
        </td>
        <!-- Display club.name end -->

        <!-- Display club.level start -->
        <td>
          <%= club.level %>
        </td>
        <!-- Display club.level end -->

        <!-- Display club.created_at start -->
        <td>
          <%= time_ago_in_words(club.created_at) %> ago
        </td>
        <!-- Display club.created_at end -->

        <!-- Display club.updated_at start -->
        <td>
          <%= time_ago_in_words(club.updated_at) %> ago
        </td>
        <!-- Display club.updated_at end -->

        <td>
          <a href="/clubs/<%= club.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
