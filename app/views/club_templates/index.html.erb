<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All clubs
    </h1>

    <a href="/clubs/new" class="btn btn-block btn-outline-secondary">
      Add a new club
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "club_templates/clubs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          League
        </th>

        <th>
          Name
        </th>

        <th>
          Level
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @clubs.each do |club| %>
      <tr>
        <td>
          <%= club.id %>
        </td>

        <td>
          <% if club.league.present? %>
            <a href="/leagues/<%= club.league.id %>">
              <%= club.league.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= club.name %>
        </td>

        <td>
          <%= club.level %>
        </td>

        <td>
          <%= time_ago_in_words(club.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(club.updated_at) %> ago
        </td>

        <td>
          <a href="/clubs/<%= club.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @clubs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
