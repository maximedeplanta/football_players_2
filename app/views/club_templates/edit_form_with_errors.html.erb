<% if @club.errors.any? %>
  <% @club.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit club #<%= @club.id %>
</h1>

<hr>

<form action="/update_club/<%= @club.id %>" method="post">

  <div class="form-group">
    <label for="league_id">
      League
    </label>

    <%= select_tag(:league_id, options_from_collection_for_select(League.all, :id, :name, @club.league_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @club.name %>">
  </div>

  <div class="form-group">
    <label for="level">
      Level
    </label>

    <input type="text" id="level" name="level" class="form-control" value="<%= @club.level %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update club
  </button>
</form>

<hr>

<a href="/clubs">
  Go back
</a>
