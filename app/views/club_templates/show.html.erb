<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Club #<%= @club.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/clubs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/clubs/<%= @club.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit club
        </a>
      </div>

      <div class="col">
        <a href="/delete_club/<%= @club.id %>" class="btn btn-block btn-outline-secondary">
          Delete club
        </a>
      </div>
    </div>

    <dl>
      <dt>
        League
      </dt>
      <dd>
        <% if @club.league.present? %>
          <a href="/leagues/<%= @club.league_id %>">
            <%= @club.league.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @club.name %>
      </dd>

      <dt>
        Level
      </dt>
      <dd>
        <%= @club.level %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@club.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@club.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "club_templates/club_players" %>
  </div>
</div>
