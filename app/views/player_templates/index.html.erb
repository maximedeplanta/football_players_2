<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All players
    </h1>

    <a href="/players/new" class="btn btn-block btn-outline-secondary">
      Add a new player
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Club
        </th>

        <th>
          Name
        </th>

        <th>
          Position
        </th>

        <th>
          Level
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @players.each do |player| %>
      <tr>
        <!-- Display player.id start -->
        <td>
          <%= player.id %>
        </td>
        <!-- Display player.id end -->

        <!-- Display player.club_id start -->
        <td>
          <%= player.club.league_id %>
        </td>
        <!-- Display player.club_id end -->

        <!-- Display player.name start -->
        <td>
          <%= player.name %>
        </td>
        <!-- Display player.name end -->

        <!-- Display player.position start -->
        <td>
          <%= player.position %>
        </td>
        <!-- Display player.position end -->

        <!-- Display player.level start -->
        <td>
          <%= player.level %>
        </td>
        <!-- Display player.level end -->

        <!-- Display player.created_at start -->
        <td>
          <%= time_ago_in_words(player.created_at) %> ago
        </td>
        <!-- Display player.created_at end -->

        <!-- Display player.updated_at start -->
        <td>
          <%= time_ago_in_words(player.updated_at) %> ago
        </td>
        <!-- Display player.updated_at end -->

        <td>
          <a href="/players/<%= player.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @players, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
