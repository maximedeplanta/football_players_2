<!-- Validation failure messages -->
<% if @player.errors.any? %>
  <% @player.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit player #<%= @player.id %>
</h1>

<hr>

<!-- Form player start -->
<form action="/update_player/<%= @player.id %>" method="post">
<!-- Form player end -->

  <!-- Label and input for club_id start -->
  <div class="form-group">
    <label for="club_id">
      Club
    </label>

    <!-- Input for club_id start -->
    <input type="text" id="club_id" name="club_id" class="form-control" value="<%= @player.club_id %>">
    <!-- Input for club_id end -->
  </div>
  <!-- Label and input for club_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @player.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for position start -->
  <div class="form-group">
    <label for="position">
      Position
    </label>

    <!-- Input for position start -->
    <input type="text" id="position" name="position" class="form-control" value="<%= @player.position %>">
    <!-- Input for position end -->
  </div>
  <!-- Label and input for position end -->

  <!-- Label and input for level start -->
  <div class="form-group">
    <label for="level">
      Level
    </label>

    <!-- Input for level start -->
    <input type="text" id="level" name="level" class="form-control" value="<%= @player.level %>">
    <!-- Input for level end -->
  </div>
  <!-- Label and input for level end -->

  <button class="btn btn-block btn-outline-secondary">
    Update player
  </button>
</form>

<hr>

<a href="/players">
  Go back
</a>
